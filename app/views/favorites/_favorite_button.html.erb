
  <% if current_user.favoriting?(post) %>
    <%= form_for(post.favorites.find_by(user_id: current_user.id), html: { method: :delete }) do |f| %>
     
      <%= hidden_field_tag :post_id, post.id %>
      <%= f.submit 'Unfavorite', class: 'btn btn-danger btn-block' %>
    <% end %>
  <% else %>
    <%= form_for(current_user.favorites.build) do |f| %>
      <%= hidden_field_tag :post_id, post.id %>
      <%= f.submit 'Favorite', class: 'btn btn-primary btn-block' %>
  <% end %>
<% end %>